<div style="background-color: red; color: white; font-weight: bold; text-align: center">SNACK 4</div>

@{
    List<int> numbers = new List<int>();

    for(var i = 0; i < 20; i++)
    {
        Random random = new Random();
        int randomNumber = random.Next(1, 91);
        numbers.Add(randomNumber);
    }

    foreach(int number in numbers)
    {
        if (number > 20 && number < 70)
        {
            <div>@number</div>
        }
    }
}

