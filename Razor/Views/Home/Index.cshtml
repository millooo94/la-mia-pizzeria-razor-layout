<div style="background-color: red; color: white; font-weight: bold; text-align: center">SNACK 2</div>

@functions{
    public int sum(int max)
    {
        var start = 0;

        for(var i = 1; i <= max; i++)
        {
            start += i;
        }

        return start;
    }
}

<span>@sum(3)</span>

